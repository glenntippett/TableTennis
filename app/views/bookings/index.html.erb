<% @bookings.each do |booking| %>
  <p><%= booking.start_date.strftime("%d of %B, %Y") %></p>
  <p><%= booking.start_time.strftime("%I:%M %p") %></p>
  <p><%= booking.end_time.strftime("%I:%M %p") %></p>
  <%= link_to 'Cancel this booking', booking_path(booking), method: :delete, data: {confirm: "Cancel booking?"} %>
<% end %>

<%= link_to 'Back', root_path, class: 'btn btn-outline-danger' %>

