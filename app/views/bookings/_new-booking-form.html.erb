<%= simple_form_for @booking do |f| %>
  <%= f.input :start_date, label: 'Start Time', as: :date, html5: true, start_day: Date.today.day %>
  <%= f.input :end_date, label: 'End Time', as: :string, as: :date, html5: true, start_day: Date.today.day %>
  <%= f.submit 'Confirm booking', class: 'btn btn-success' %>
  <%= link_to 'Cancel', root_path, class: 'btn btn-outline-danger' %>
<% end %>
