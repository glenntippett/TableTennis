<div class="container">
  <div class="row">
    <div class="col">

      <h2>Message Board</h2>

      <% @posts.each do |post| %>
        <h3><%= post.title %></h3>
        <span class="text-muted"><strong>Posted by: </strong><em><%= post.user.email.split('@')[0] %></em></span>
        <p><%= post.content %></p>
        <% if post.user == current_user %>
          <%= link_to 'Remove my post', 
            post_path(post), 
            method: :delete, 
            data: {confirm: "Remove post?"},
            class: 'text-danger' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
